<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.jaron.mathfun.Game">

    <TextView
        android:id="@+id/first_hidden_timer"
        android:textColor="@color/background_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/second_hidden_timer"
        android:textColor="@color/background_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_hidden_timer"/>
    <TextView
        android:id="@+id/third_hidden_timer"
        android:textColor="@color/background_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_hidden_timer"/>
    <ImageView
        android:id="@+id/middle_balloon"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_centerHorizontal="true">
    </ImageView>
    <ImageView
        android:id="@+id/left_balloon"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
    </ImageView>
    <ImageView
        android:id="@+id/right_balloon"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
    </ImageView>
    <TextView
        android:id="@+id/middle_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/right_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/left_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/dark_blue" />
    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="stateAlwaysVisible"
        android:imeOptions="actionNone"
        android:inputType="number"
        android:textSize="35sp"
        android:textCursorDrawable="@null"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLength="3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/game_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/points"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
