<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaron.mathfun.LevelSelect">

    <LinearLayout
        android:id="@+id/vertical_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/level_select_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="2.5"
            android:shadowRadius="1.5"
            android:layout_centerHorizontal="true"
            android:text="@string/level_prompt"
            android:textSize="45sp"/>
        <LinearLayout
            android:id="@+id/row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="11">
            <Button
                android:id="@+id/level_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/one"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/two"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/three"
                android:textSize="46sp" />
    </LinearLayout>
        <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>

        <LinearLayout
            android:id="@+id/row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:orientation="horizontal">
            <Button
                android:id="@+id/level_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/four"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/five"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/six"
                android:textSize="46sp" />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:orientation="horizontal">
            <Button
                android:id="@+id/level_seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/seven"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/eight"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_nine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/nine"
                android:textSize="46sp" />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:orientation="horizontal">
            <Button
                android:id="@+id/level_ten"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/ten"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_eleven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/eleven"
                android:textSize="46sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/level_twelve"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@style/blue_button"
                android:textColor="@color/white"
                android:text="@string/twelve"
                android:textSize="46sp" />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/last_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/orange_button"
            android:text="@string/last_level"
            android:textSize="24sp"/>
    </LinearLayout>



</RelativeLayout>
