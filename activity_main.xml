<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:screenOrientation="portrait"
    tools:context="com.example.jaron.mathfun.MainActivity">

    <ImageView
        android:id="@+id/yellow_balloon_1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/balloon_yellow"/>
    <ImageView
        android:id="@+id/red_balloon_1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp"
        android:background="@drawable/balloon_red"/>
    <ImageView
        android:id="@+id/blue_balloon_1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/balloon_blue"/>
    <ImageView
        android:id="@+id/purple_balloon_1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="300dp"
        android:layout_marginStart="300dp"
        android:background="@drawable/balloon_purple"/>
    <ImageView
        android:id="@+id/orange_balloon_1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="280dp"
        android:background="@drawable/balloon_orange"/>
    <ImageView
        android:id="@+id/pink_balloon_1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="270dp"
        android:layout_marginStart="270dp"
        android:background="@drawable/balloon_pink"/>
    <ImageView
        android:id="@+id/green_balloon_1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/balloon_green"/>
    <ImageView
        android:id="@+id/cloud"
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cloud"/>
    <ImageView
        android:id="@+id/purple_balloon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/balloon_purple"/>
    <ImageView
        android:id="@+id/pink_balloon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp"
        android:background="@drawable/balloon_pink"/>
    <ImageView
        android:id="@+id/red_balloon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/balloon_red"/>
    <ImageView
        android:id="@+id/green_balloon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="191dp"
        android:background="@drawable/balloon_green"/>
    <ImageView
        android:id="@+id/yellow_balloon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"
        android:background="@drawable/balloon_yellow"/>
    <ImageView
        android:id="@+id/blue_balloon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/balloon_blue"/>
    <ImageView
        android:id="@+id/orange_balloon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:background="@drawable/balloon_orange"/>
    <TextView
        android:id="@+id/title_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_blue"
        android:shadowColor="@color/black"
        android:shadowDx="7"
        android:shadowDy="6"
        android:shadowRadius="4"
        android:textSize="60sp"
        android:layout_marginTop="36dp"
        android:text="@string/app_name"/>
    <Button
        android:id="@+id/start_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textSize="80sp"
        android:theme="@style/orange_button"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_main_menu"/>
    <Button
        android:id="@+id/high_scores_main_menu"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="@string/high_scores"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:theme="@style/blue_button"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"/>
    <!--android:background="@drawable/button_blue_1"-->
    <Button
        android:id="@+id/languages_main_menu"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="@string/language"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:theme="@style/blue_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
